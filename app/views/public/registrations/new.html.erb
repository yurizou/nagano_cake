
<div class="container">
  <h2 class="col-3 border border-text">新規会員登録</h2>
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row my-3">
    <div class="col-2"><%= f.label :名前 %></div>
    <div class="col-1"><%= f.label :（姓） %></div>
    <div class="col-3"><%= f.text_field :last_name, placeholder: "令和" %></div>
    <div class="col-1"><%= f.label :（メイ） %></div>
    <div class="col-3"><%= f.text_field :first_name, placeholder: "道子" %></div>
  </div>
  <div class="row my-3">
    <div class="col-2"><%= f.label :フリガナ %></div>
    <div class="col-1"> <%= f.label :（セイ） %></div>
    <div class="col-3"><%= f.text_field :last_name_kana, placeholder: "レイワ" %></div>
    <div class="col-1"> <%= f.label :（メイ） %></div>
    <div class="col-3"><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></div>
  </div>

  <div class="row my-3">
    <div class="col-2"><%= f.label :メールアドレス %></div>
    <div class="col-1"></div>
    <div class="col-3">  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@examplw.com" %></div>
  </div>

  <div class="row my-3">
    <div class="col-3"><%= f.label :郵便番号（ハイフンなし） %></div>
    <div class="col-3"><%= f.text_field :postal_code, placeholder: "0000000" %></div>
  </div>

  <div class="row my-3">
    <div class="col-2"> <%= f.label :住所 %></div>
    <div class="col-1"></div>
    <div class="col-9"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神国町０−０" %></div>
  </div>

  <div class="row my-3">
    <div class="col-3"><%= f.label :電話番号（ハイフンなし） %></div>
    <div class="col-3"> <%= f.text_field :number, placeholder: "0000000000" %></div>
  </div>

  <div class="row my-3">
    <div class="col-3">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
    </div>
    <div class="col-3"><%= f.password_field :password, autocomplete: "new-password" %></div>
  </div>

  <div class="row my-3">
    <div class="col-3"><%= f.label :パスワード（確認用） %></div>
    <div class="col-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
  </div>

  <div class="row my-3">
    <div class="col-3"></div>
   <div class="col-4">
     <%= f.submit "新規登録", class: "btn btn-success" %>
   </div>
  </div>
  <% end %>

  <h2 class="col-3 border border-text">既に登録済の方</h2>
  　<p><%= link_to 'こちら', new_customer_session_path %>からログインしてください</p>

</div>



