<h1>ショッピングカート</h1>
<%= link_to "カートを空にする", cart_item_path, method: :delete %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= @cart_items.each do |cart_item| %>
    <tr>
      <th><%= image_tag item.image, size: "200x200" %>
      <%= item.name %>
      </th>
      <th><%= item.with_tax_price %></th>
      <th><%#=数量選択のインスタンス変数は？%> </th>
      <%#=小計の計算方法は？%>
      <th><%= item.subtotal %></th>
      <%= @合計金額 += cart_item.subtotal %>
      <th><%= f.submit "削除する" %></th>
    </tr>
    <% end 
  </tbody>
</table>