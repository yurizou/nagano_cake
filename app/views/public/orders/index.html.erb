<div class="container">
 <h2 class="col-3 border border-text">注文履歴一覧</h2>
  <table class="table">
    <!--折り返しさせたくない-->
  <thead styles="nowrap">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <th><%= order.created_at %></th>
      <!--きれいに折り返したい（郵便番号後ろ）-->
      <th style="word-wrap: break-word"><%= order.postal_code + order.address + order.name %></th>
      <th>
        <% order.order_details.each do |order_detail| %>
        <%= order_detail.item.name %>
        <% end %>
      </th>
      <th><%= order.payment %>円</th>
      <th><%= order.status_i18n %></th>
      <th><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></th>
    </tr>
    <% end %>
  </tbody>
</table>
</div>  



