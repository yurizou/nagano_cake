<div class="container">
  <h1 class="col-3 border border-text">会員情報編集</h1>
  <div class="row my-3">
    <%= form_with model: @customer,url: customers_info_path do |f| %>
    <div class="col-3"> <%= f.label :氏名 %></div>
    <div class="col-3"><%= f.text_field :last_name %></div>
    <div class="col-3"><%= f.text_field :first_name %></div>
  </div>
  <div class="row my-3">
    <div class="col-3"><%= f.label :フリガナ %></div>
    <div class="col-3"><%= f.text_field :last_name_kana %></div>
    <div class="col-3"> <%= f.text_field :first_name_kana %></div>
  </div>
  <div class="row my-3">
    <div class="col-3"><%= f.label :郵便番号 %></div>
    <div class="col-3"><%= f.text_field :postal_code %></div>
  </div>
  <div class="row my-3">
    <div class="col-3"><%= f.label :住所 %></div>
    <div class="col-3"><%= f.text_field :address %></div>
  </div>
  <div class="row my-3">
    <div class="col-3"> <%= f.label :電話番号 %></div>
    <div class="col-3"> <%= f.text_field :number %></div>
  </div>
  <div class="row my-3">
    <div class="col-3"> <%= f.label :メールアドレス %></div>
    <div class="col-3"> <%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>
  
  <div class="row my-3">
    <div class="col-3"></div>
    <div class="col-4">
       <button type="submit" class="btn btn-success">編集内容を保存</button>
    </div>
    <div class="col-2"><%= link_to "退会する", customers_confirm_path, class: "btn btn-danger" %></div>
  </div>
</div>

 <div class="col-4 center-block text-light">
     
