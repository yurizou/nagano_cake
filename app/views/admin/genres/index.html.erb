<div class="container">

    <div class="row my-4">
      <div class="col-4">
        <h2 class="border border-text">ジャンル一覧・追加</h2>
      </div>
    </div>
   
    <div class="row my-4">
     
      <div class="col-2">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label :ジャンル名 %>
      </div>
      <div class="col-3">
        <%= f.text_field :name %>
      </div>
        <div class="col-2 center-block text-light">
        <button type="submit" class="btn btn-success">新規登録</button>
        </div>
        <% end %>
    </div>


  <div class="row">
    <div class="col-5">
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <th><%= genre.name %></th>
          <th><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
   </div>
  </div>

</div>