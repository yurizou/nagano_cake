<div class="container">
  <div class="row my-3">
    <div class="col-3 border border-text">
      <h2>ジャンル編集</h2>
    </div>
  </div>
     <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
  <div class="row my-3">
   <div class="col-4">
     <h4>ジャンル名</h4>
   </div>
   <div class="col-4">
     <%= f.text_field :name %>
   </div>
   <div class="col-4  text-light">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
     </div>
   </div>
    <% end %>
</div>





