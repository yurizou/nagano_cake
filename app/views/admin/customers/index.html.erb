<h1>顧客一覧画面</h1>

<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
　
<% @customers.each do |customer| %>
  <tbody>
    <tr>
      <th><%= customer.id %></th>
      <th><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %></th>
      <th><%= customer.email %></th>
      <th>
      　<% if customer.is_delete %>
      　<p>退会済</p>
      　<% else %>
      　<p>有効</p>
      　<% end %>
      </th>
    </tr>
  </tbody>
<% end %>

</table>