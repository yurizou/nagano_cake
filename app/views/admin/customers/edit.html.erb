<h2><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>

  <p>会員ID</p><%= @customer.id %></p>
 <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
 <%= f.label :氏名 %><%= f.text_field :last_name %><%= f.text_field :first_name %>
 <%= f.label :フリガナ %><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
 <%= f.label :郵便番号 %><%= f.text_field :postal_code %>
 <%= f.label :住所 %><%= f.text_field :address %>
 <%= f.label :電話番号 %><%= f.text_field :number %>
 <%= f.label :メールアドレス %><%= f.text_field :email %>
 <%= f.label :会員ステータス %>
 <%= f.radio_button :is_delete, true %><%= f.label :is_delete, '退会', value: true %>
 <%= f.radio_button :is_delete, false %><%= f.label :is_delete, '有効', value: false %>

 <%= f.submit "変更を保存" %>
 <% end %>