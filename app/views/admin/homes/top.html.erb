<div class="container">
<h1 class="col-3 border text-dark">注文履歴一覧</h1>
<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>



    <tbody>
     <% @orders.each do |order| %>
      <tr>
        <th><%= link_to admin_order_path(order.id) do %>
            <%= order.created_at %>
            <% end %>
        </th>

        <th><%= order.customer.last_name + order.customer.first_name %></th>
        <th><%= order.order_details.sum(:quantity) %></th>
        <th><%= order.status_i18n %></th>
     </tr>
     <% end %>
    </tbody>
  </table>
  <%= paginate @orders %>
</div>

