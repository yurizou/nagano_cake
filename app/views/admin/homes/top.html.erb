
<h1>注文履歴一覧</h1>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>


  
    <tbody>
     <% @orders.each do |order| %>
      <tr>
        <th><%= link_to admin_order_path(params[:id]) do %>
            <%= order.created_at %>
            <% end %>
        </th>
        <th><%= order.customer_id %></th>
        <th><%= order.order_details.sum(:quantity) %></th>
        <th><%= order.status %></th>
     </tr>
     <% end %>
    </tbody>
  </table>



