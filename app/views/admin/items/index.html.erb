<div class="container">
  <div class="d-flex justify-content-between">
    <h1 class="border">商品一覧</h1>

          <%= link_to new_admin_item_path do %>
          <i class="fas fa-plus-square"></i>
          <% end %>

  </div>
<table class="table" >
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>


  <% @items.each do |item| %>
    <tbody>
      <tr>
        <th><%= item.id %></th>
        <th><%= link_to item.name, admin_item_path(item.id) %></th>
        <th><%= item.price %></th>
        <th><%= item.genre.name %></th>
        <th>
          <% if item.is_active %>
          <p class="text-success">販売中</p>
          <% else %>
        　<p class="text-secondary">販売停止中</p>
        </th>
        <% end %>


  <% end %>
     </tr>
    </tbody>
  </table>

</div>